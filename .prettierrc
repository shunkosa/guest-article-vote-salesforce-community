{
  "singleQuote": true, 
  "tabWidth": 4,
  "trailingComma": "none",
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}